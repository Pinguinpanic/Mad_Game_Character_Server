extends layout

block content
  if (!user)
    h1 Next Battle
    p Starts in #{battle.date}. There are #{battle.userCount} users participating.
    p Please log in or register to participate!
    
  if (user)
    h1 #{user.username}
    .row
      .col-lg-6
        h2 Stats
        table.table
          tbody
            tr
              td 
              td 
                b Name
              td 
                b Armor
              td 
                b Damage
            tr
              td Helmet
              td 
                if(user.helmet[0])
                  #{user.helmet[0].name}
              td
              td
            tr
              td Armor
              td
                if(user.armor[0])
                  #{user.armor[0].name}
              td 
              td
            tr
              td Weapon
              td
                if(user.weapon[0])
                  #{user.weapon[0].name}
              td 
              td

        a.btn.btn-lg.btn-danger.btn-block(href="/add-random") Add random

        h2 Trunk
        table.table
          tbody
            tr
              td 
                b Name
              td
                b Type
              td 
                b Armor
              td 
                b Damage

            each val in user.trunk
              tr
                td #{val.name}
                td #{val.type}
                td #{val.armor}
                td #{val.damage}

      .col-lg-6
        h2 Next Battle
        p Starts in #{battle.date}. There are #{battle.userCount} users participating.
        if (user.participating)
          p #{user.username} is participating in the upcoming battle.
          a.btn.btn-lg.btn-danger.btn-block(href="/un-participate") Leave
        if (!user.participating)
          p #{user.username} is not participating in the upcoming battle.
          a.btn.btn-lg.btn-success.btn-block(href="/participate") Join

